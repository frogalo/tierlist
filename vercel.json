{
  "version": 2,
  "builds": [
    {
      "src": "build/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/build/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/public/:path*"
    }
  ]
}
